.page {
  min-height: 100vh;
  padding: 64rpx 48rpx 72rpx;
  color: #1c1b16;
  background: linear-gradient(160deg, #f5efe5 0%, #efe4d4 35%, #e2d2bf 100%);
  font-family: "STSong", "Noto Serif SC", "Source Han Serif SC", serif;
}

.hero {
  position: relative;
  padding: 48rpx 40rpx 56rpx;
  border-radius: 28rpx;
  background: linear-gradient(140deg, rgba(255, 255, 255, 0.7), rgba(248, 242, 232, 0.9));
  box-shadow: 0 20rpx 60rpx rgba(96, 72, 30, 0.18);
  overflow: hidden;
}

.hero::before {
  content: "";
  position: absolute;
  top: -120rpx;
  right: -160rpx;
  width: 360rpx;
  height: 360rpx;
  background: radial-gradient(circle at 30% 30%, rgba(190, 111, 62, 0.45), rgba(190, 111, 62, 0));
  opacity: 0.9;
}

.badge {
  display: inline-block;
  padding: 10rpx 20rpx;
  border-radius: 999rpx;
  background: #1c1b16;
  color: #f5efe5;
  font-size: 22rpx;
  letter-spacing: 2rpx;
}

.title {
  margin-top: 22rpx;
  font-size: 72rpx;
  font-weight: 700;
  letter-spacing: 4rpx;
}

.subtitle {
  margin-top: 12rpx;
  font-size: 28rpx;
  line-height: 1.6;
  color: #5c5246;
}

.hero-stats {
  display: flex;
  gap: 16rpx;
  margin-top: 32rpx;
}

.stat {
  flex: 1;
  padding: 20rpx;
  border-radius: 20rpx;
  background: rgba(255, 255, 255, 0.75);
  border: 1rpx solid rgba(120, 96, 60, 0.18);
}

.stat-value {
  font-size: 40rpx;
  font-weight: 700;
}

.stat-label {
  margin-top: 6rpx;
  font-size: 22rpx;
  color: #6a5e50;
}

.cta-row {
  margin-top: 36rpx;
}

.primary-button {
  width: 100%;
  border-radius: 18rpx;
  background: #b4632c;
  color: #fff;
  font-size: 30rpx;
  letter-spacing: 2rpx;
  box-shadow: 0 16rpx 30rpx rgba(180, 99, 44, 0.35);
}

.cta-note {
  margin-top: 16rpx;
  font-size: 24rpx;
  color: #6e6153;
  text-align: center;
}

.panel {
  margin-top: 36rpx;
  padding: 32rpx;
  border-radius: 24rpx;
  background: rgba(255, 255, 255, 0.7);
  border: 1rpx solid rgba(120, 96, 60, 0.18);
}

.panel-title {
  font-size: 28rpx;
  font-weight: 600;
  margin-bottom: 18rpx;
}

.panel-item {
  font-size: 24rpx;
  color: #5b5145;
  margin-bottom: 12rpx;
}

.preview {
  margin-top: 30rpx;
  padding: 28rpx 32rpx;
  border-radius: 24rpx;
  background: #1f1b17;
  color: #f5efe5;
}

.preview-title {
  font-size: 26rpx;
  font-weight: 600;
}

.chips {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
  margin-top: 16rpx;
}

.chip {
  padding: 10rpx 20rpx;
  border-radius: 999rpx;
  background: rgba(244, 232, 215, 0.12);
  border: 1rpx solid rgba(244, 232, 215, 0.2);
  font-size: 22rpx;
}

.preview-note {
  margin-top: 18rpx;
  font-size: 22rpx;
  color: rgba(244, 232, 215, 0.8);
}

.page {
  min-height: 100vh;
  padding: 56rpx 36rpx 90rpx;
  background: linear-gradient(160deg, #f5efe7 0%, #f9f5ef 100%);
  color: #1f1b16;
  font-family: "STSong", "Noto Serif SC", serif;
}

.header {
  margin-bottom: 24rpx;
}

.title {
  font-size: 50rpx;
  font-weight: 700;
}

.subtitle {
  margin-top: 8rpx;
  font-size: 24rpx;
  color: #6d6154;
}

.card {
  margin-top: 22rpx;
  padding: 26rpx 26rpx 30rpx;
  border-radius: 24rpx;
  background: #ffffff;
  box-shadow: 0 18rpx 40rpx rgba(96, 72, 30, 0.12);
}

.card.empty {
  text-align: center;
}

.card-title {
  font-size: 28rpx;
  font-weight: 600;
  margin-bottom: 16rpx;
}

.empty-text {
  font-size: 24rpx;
  color: #7a6d60;
  margin-bottom: 16rpx;
}

.grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 16rpx;
}

.progress-card {
  padding: 18rpx 20rpx;
  border-radius: 20rpx;
  background: rgba(255, 255, 255, 0.9);
  border: 1rpx solid rgba(88, 64, 30, 0.12);
}

.progress-name {
  font-size: 26rpx;
  font-weight: 600;
}

.progress-level,
.progress-next {
  margin-top: 8rpx;
  font-size: 22rpx;
  color: #6e6256;
}

.progress-cond {
  margin-top: 10rpx;
  font-size: 20rpx;
  color: #8a7c6e;
}

.primary-button {
  margin-top: 6rpx;
  background: #1f1b17;
  color: #f5eee6;
  border-radius: 18rpx;
  font-size: 28rpx;
}

.secondary-button {
  margin-top: 12rpx;
  background: #ffffff;
  color: #1f1b17;
  border: 1rpx solid #d9d1c7;
  border-radius: 18rpx;
  font-size: 26rpx;
}

.ghost-button {
  margin-top: 12rpx;
  border-radius: 18rpx;
  border: 1rpx dashed rgba(88, 64, 30, 0.4);
  color: #5b4835;
  background: transparent;
  font-size: 26rpx;
}

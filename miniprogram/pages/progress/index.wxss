  padding: 56rpx 34rpx 96rpx;
}

.title {
  font-size: 50rpx;
  line-height: 1.1;
}

.subtitle {
  font-size: 24rpx;
  line-height: 1.4;
}

.card,
.hero-card {
  margin-top: 22rpx;
  padding: 28rpx 28rpx 32rpx;
  border-radius: 24rpx;
}

.card-title {
  font-size: 30rpx;
  line-height: 1.35;
  margin-bottom: 16rpx;
}

.primary-button {
  min-height: 84rpx;
  line-height: 84rpx;
  border-radius: 18rpx;
  font-size: 28rpx;
}

.secondary-button {
  min-height: 84rpx;
  line-height: 84rpx;
  border-radius: 18rpx;
  font-size: 26rpx;
}

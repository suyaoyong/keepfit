.page {
  padding: 32rpx;
}

.page-title {
  font-size: 40rpx;
  font-weight: 700;
  color: #1f1f1f;
}

.page-desc {
  margin-top: 12rpx;
  font-size: 26rpx;
  color: #666666;
}

.card {
  margin-top: 24rpx;
  padding: 24rpx;
  border-radius: 16rpx;
  background: #ffffff;
  box-shadow: 0 6rpx 16rpx rgba(0, 0, 0, 0.06);
}

.card-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #1f1f1f;
}

.card-desc {
  margin-top: 8rpx;
  font-size: 24rpx;
  color: #666666;
}

.primary-button {
  margin-top: 16rpx;
  background: #1f1f1f;
  color: #ffffff;
  border-radius: 12rpx;
}

.primary-button::after {
  border: none;
}

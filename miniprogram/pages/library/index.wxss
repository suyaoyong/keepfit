.page {
  min-height: 100vh;
  padding: 56rpx 34rpx 96rpx;
  background: radial-gradient(circle at top right, #2a1a12 0%, #141414 42%, #0d0d0d 100%);
  color: #f3efe8;
  font-family: "Noto Sans SC", "PingFang SC", sans-serif;
}
.header { margin-bottom: 24rpx; }
.title { font-size: 50rpx; line-height: 1.1; font-weight: 700; color: #fff8f0; }
.subtitle { margin-top: 8rpx; font-size: 24rpx; line-height: 1.4; color: #b8aea2; }
.card { margin-top: 22rpx; padding: 28rpx 28rpx 32rpx; border-radius: 24rpx; background: rgba(22,22,22,.95); border: 1rpx solid rgba(255,255,255,.08); }
.card-title { font-size: 30rpx; color: #f2ede4; margin-bottom: 16rpx; }
.empty { text-align: center; }
.empty-text { font-size: 24rpx; color: #bcae9d; }
.secondary-button { margin-top: 14rpx; min-height: 84rpx; line-height: 84rpx; border-radius: 18rpx; background: rgba(255,255,255,.05); color: #ffe4cf; border: 1rpx solid rgba(255,106,0,.32); font-size: 26rpx; }
.secondary-button::after { border: none; }
.book-row { display: flex; align-items: center; gap: 14rpx; padding: 14rpx 0; border-bottom: 1rpx solid rgba(255,255,255,.08); }
.book-row:last-child { border-bottom: none; }
.book-cover { width: 84rpx; height: 112rpx; border-radius: 10rpx; background: rgba(255,255,255,.08); }
.book-cover.placeholder { display: flex; align-items: center; justify-content: center; color: #ffe4cf; font-size: 30rpx; }
.book-main { flex: 1; }
.book-title { font-size: 28rpx; color: #f2ede4; }
.book-meta { margin-top: 4rpx; font-size: 22rpx; color: #bcae9d; }
.book-intro { margin-top: 4rpx; font-size: 22rpx; color: #bcae9d; }
.book-arrow { color: #ff9a4a; font-size: 28rpx; }

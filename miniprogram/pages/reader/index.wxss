.page { min-height: 100vh; padding: 56rpx 24rpx 24rpx; background: radial-gradient(circle at top right, #2a1a12 0%, #141414 42%, #0d0d0d 100%); color: #f3efe8; font-family: "Noto Sans SC", "PingFang SC", sans-serif; display: flex; flex-direction: column; }
.header { padding: 0 10rpx; }
.title { font-size: 36rpx; line-height: 1.1; font-weight: 700; color: #fff8f0; }
.subtitle { margin-top: 8rpx; font-size: 22rpx; color: #b8aea2; }
.card { margin-top: 22rpx; padding: 28rpx; border-radius: 24rpx; background: rgba(22,22,22,.95); border: 1rpx solid rgba(255,255,255,.08); }
.empty { text-align: center; }
.empty-text { font-size: 24rpx; color: #bcae9d; }
.reader-scroll { margin-top: 20rpx; flex: 1; min-height: 0; }
.reader-card { padding: 30rpx 28rpx 48rpx; border-radius: 24rpx; background: rgba(22,22,22,.95); border: 1rpx solid rgba(255,255,255,.08); }
.reader-block-text { line-height: 1.9; color: #f2ede4; font-size: 30rpx; }
.reader-block-image { margin: 20rpx 0 30rpx; }
.reader-image { width: 100%; height: auto; display: block; border-radius: 16rpx; background: #111; }
.reader-image-tip { margin-top: 10rpx; font-size: 22rpx; color: #bcae9d; text-align: center; }
.reader-actions { margin-top: 16rpx; display: grid; grid-template-columns: 1fr 1fr; gap: 12rpx; }
.secondary-button { min-height: 76rpx; line-height: 76rpx; border-radius: 16rpx; background: rgba(255,255,255,.05); color: #ffe4cf; border: 1rpx solid rgba(255,106,0,.32); font-size: 24rpx; }
.secondary-button::after { border: none; }
.page {
  min-height: 100vh;
  padding: 56rpx 30rpx 90rpx;
  background: linear-gradient(180deg, #f6f3ec 0%, #faf7f2 100%);
  color: #1f1b16;
  font-family: "STSong", "Noto Serif SC", serif;
}

.header {
  margin-bottom: 24rpx;
}

.title {
  font-size: 48rpx;
  font-weight: 700;
}

.subtitle {
  margin-top: 8rpx;
  font-size: 24rpx;
  color: #6f6256;
}

.card {
  margin-top: 20rpx;
  padding: 24rpx;
  border-radius: 22rpx;
  background: #fff;
  box-shadow: 0 16rpx 34rpx rgba(96, 72, 30, 0.12);
}

.card.empty {
  text-align: center;
}

.card-title {
  font-size: 28rpx;
  font-weight: 600;
  margin-bottom: 14rpx;
}

.meta {
  display: flex;
  gap: 16rpx;
  flex-wrap: wrap;
  font-size: 22rpx;
  color: #6d6154;
}

.exercise-list {
  margin-top: 12rpx;
}

.exercise-row {
  padding: 10rpx 0;
  border-bottom: 1rpx solid rgba(88, 64, 30, 0.12);
}

.exercise-row:last-child {
  border-bottom: none;
}

.exercise-top {
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 12rpx;
}

.exercise-name {
  font-size: 24rpx;
}

.exercise-target {
  margin-top: 4rpx;
  font-size: 21rpx;
  color: #7a6d60;
}

.mini-link {
  margin: 0;
  min-width: 120rpx;
  height: 50rpx;
  line-height: 50rpx;
  border-radius: 12rpx;
  border: 1rpx solid #d9d1c7;
  color: #5b4835;
  background: #fff;
  font-size: 22rpx;
}

.mini-link::after {
  border: none;
}

.status-group {
  display: flex;
  gap: 20rpx;
  flex-wrap: wrap;
}

.status-item {
  display: inline-flex;
  align-items: center;
  gap: 8rpx;
  font-size: 24rpx;
  color: #5b4835;
}

.status-readonly {
  display: inline-block;
  padding: 8rpx 16rpx;
  border-radius: 999rpx;
  background: rgba(31, 27, 23, 0.08);
  color: #2b241d;
  font-size: 24rpx;
  font-weight: 600;
}

.entry-head,
.entry-row {
  display: grid;
  grid-template-columns: 2fr 1fr 1fr;
  gap: 10rpx;
  align-items: center;
}

.entry-head {
  margin-bottom: 8rpx;
  font-size: 22rpx;
  color: #7a6d60;
}

.entry-row {
  padding: 8rpx 0;
  border-bottom: 1rpx solid #f0ece6;
}

.entry-row:last-child {
  border-bottom: none;
}

.entry-action {
  font-size: 24rpx;
  color: #1f1b16;
}

.mini-input {
  height: 58rpx;
  line-height: 58rpx;
  padding: 0 12rpx;
  border-radius: 10rpx;
  border: 1rpx solid rgba(88, 64, 30, 0.2);
  background: #faf8f4;
  font-size: 22rpx;
  box-sizing: border-box;
}

.other-training {
  margin-top: 14rpx;
  padding: 12rpx;
  border-radius: 12rpx;
  background: rgba(88, 64, 30, 0.05);
}

.other-title {
  font-size: 22rpx;
  color: #5f5347;
}

.other-row {
  margin-top: 10rpx;
  display: grid;
  grid-template-columns: 2fr 1fr;
  gap: 10rpx;
}

.other-input {
  height: 58rpx;
  line-height: 58rpx;
  padding: 0 12rpx;
  border-radius: 10rpx;
  border: 1rpx solid rgba(88, 64, 30, 0.2);
  background: #fff;
  font-size: 22rpx;
  box-sizing: border-box;
}

.field {
  margin-bottom: 12rpx;
}

.label {
  font-size: 22rpx;
  color: #6a5f54;
  margin-bottom: 8rpx;
}

.textarea {
  width: 100%;
  min-height: 60rpx;
  padding: 8rpx 16rpx;
  border-radius: 14rpx;
  border: 1rpx solid rgba(88, 64, 30, 0.2);
  background: #faf8f4;
  font-size: 24rpx;
  box-sizing: border-box;
}

.primary-button {
  margin-top: 12rpx;
  background: #1f1b17;
  color: #f5eee6;
  border-radius: 18rpx;
  font-size: 28rpx;
}

.secondary-button {
  margin-top: 12rpx;
  background: rgba(180, 99, 44, 0.1);
  color: #5b4835;
  border-radius: 18rpx;
  font-size: 26rpx;
}

.ghost-button {
  width: 100%;
  border-radius: 18rpx;
  background: transparent;
  border: 1rpx dashed rgba(88, 64, 30, 0.4);
  color: #5b4835;
  font-size: 26rpx;
}

.hint {
  margin-top: 8rpx;
  font-size: 22rpx;
  color: #7a6d60;
}

.history-date-row {
  margin-top: 12rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 12rpx;
}

.history-date-label {
  font-size: 22rpx;
  color: #5f5347;
}

.history-date-value {
  min-width: 190rpx;
  text-align: center;
  padding: 8rpx 14rpx;
  border-radius: 999rpx;
  border: 1rpx solid rgba(88, 64, 30, 0.22);
  background: #fff;
  color: #2b241d;
  font-size: 22rpx;
}

.empty-text {
  font-size: 24rpx;
  color: #7a6d60;
  margin-bottom: 16rpx;
}

.ai-result {
  margin-top: 14rpx;
  padding: 14rpx;
  border-radius: 14rpx;
  background: rgba(31, 27, 23, 0.06);
  font-size: 22rpx;
  color: #6a5f54;
}

.ai-line {
  margin-bottom: 6rpx;
}

.mode-group {
  display: flex;
  gap: 16rpx;
  flex-wrap: wrap;
}

.mode-item {
  display: inline-flex;
  align-items: center;
  gap: 8rpx;
  font-size: 22rpx;
  color: #5b4835;
}

/* V2 black-orange focus layer */
.page {
  background: #111111;
  color: #f5f5f5;
  font-family: "Noto Sans SC", "PingFang SC", sans-serif;
}

.title {
  color: #f5f5f5;
}

.subtitle {
  color: #9a9a9a;
}

.card {
  background: #1b1b1b;
  box-shadow: none;
  border: 1rpx solid #2a2a2a;
}

.card-title,
.exercise-name,
.entry-action,
.history-date-value,
.status-readonly {
  color: #f5f5f5;
}

.meta,
.exercise-target,
.entry-head,
.label,
.hint,
.history-date-label,
.other-title,
.ai-result,
.ai-line,
.empty-text,
.mode-item {
  color: #9a9a9a;
}

.mini-input,
.other-input,
.textarea,
.history-date-value {
  background: #111111;
  border-color: #2a2a2a;
  color: #f5f5f5;
}

.entry-row,
.exercise-row {
  border-bottom-color: #2a2a2a;
}

.secondary-button {
  background: #242424;
  color: #f5f5f5;
  border: 1rpx solid #2a2a2a;
}

.ghost-button {
  border-color: #3a3a3a;
  color: #9a9a9a;
}

.badge-header {
  border: 1rpx solid #ff6a00;
  background: linear-gradient(180deg, #161616 0%, #111111 100%);
}

.badge-top {
  display: flex;
  justify-content: space-between;
  align-items: center;
  gap: 12rpx;
}

.badge-shield {
  padding: 6rpx 16rpx;
  border-radius: 12rpx;
  border: 1rpx solid #ff6a00;
  color: #f5f5f5;
  font-size: 20rpx;
  background: rgba(255, 106, 0, 0.12);
}

.badge-stage {
  font-size: 22rpx;
  color: #ffb020;
}

.badge-identity {
  margin-top: 10rpx;
  font-size: 34rpx;
  font-weight: 700;
  color: #f5f5f5;
}

.badge-metrics {
  margin-top: 8rpx;
  display: flex;
  gap: 14rpx;
  flex-wrap: wrap;
}

.metric-item {
  font-size: 22rpx;
  color: #9a9a9a;
}

.metric-progress-track {
  margin-top: 10rpx;
  width: 100%;
  height: 14rpx;
  border-radius: 999rpx;
  background: #2a2a2a;
  overflow: hidden;
}

.metric-progress-fill {
  height: 100%;
  border-radius: 999rpx;
  background: #ff6a00;
}

.hero-claim {
  margin-top: 14rpx;
  font-size: 42rpx;
  line-height: 1.2;
  font-weight: 800;
  color: #f5f5f5;
}

.hero-summary {
  margin-top: 8rpx;
  font-size: 24rpx;
  color: #9a9a9a;
}

.hero-primary-button {
  margin-top: 16rpx;
  background: #ff6a00;
  color: #111111;
  border-radius: 18rpx;
  font-size: 30rpx;
  font-weight: 700;
}

/* Visual sync v2 */
.page {
  background: radial-gradient(circle at top right, #2a1a12 0%, #141414 42%, #0d0d0d 100%);
}

.card {
  background: rgba(22, 22, 22, 0.95);
  border: 1rpx solid rgba(255, 255, 255, 0.08);
}

.secondary-button {
  background: rgba(255, 255, 255, 0.05);
  border-color: rgba(255, 106, 0, 0.32);
  color: #ffe4cf;
}

.hero-primary-button {
  background: linear-gradient(90deg, #ff6a00, #ffa24b);
  color: #fff4ea;
}

/* Rhythm sync v2 */
.page {
  padding: 56rpx 34rpx 96rpx;
}

.title {
  font-size: 50rpx;
  line-height: 1.1;
}

.subtitle {
  font-size: 24rpx;
  line-height: 1.4;
}

.card {
  margin-top: 22rpx;
  padding: 28rpx 28rpx 32rpx;
  border-radius: 24rpx;
}

.card-title {
  font-size: 30rpx;
  line-height: 1.35;
  margin-bottom: 16rpx;
}

.primary-button,
.hero-primary-button {
  min-height: 84rpx;
  line-height: 84rpx;
  border-radius: 18rpx;
  font-size: 28rpx;
}

.secondary-button,
.ghost-button {
  min-height: 84rpx;
  line-height: 84rpx;
  border-radius: 18rpx;
  font-size: 26rpx;
}

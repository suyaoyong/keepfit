.page {
  min-height: 100vh;
  padding: 56rpx 36rpx 90rpx;
  background: linear-gradient(180deg, #f6f3ec 0%, #faf7f2 100%);
  color: #1f1b16;
  font-family: "STSong", "Noto Serif SC", serif;
}

.header {
  margin-bottom: 28rpx;
}

.title {
  font-size: 50rpx;
  font-weight: 700;
}

.subtitle {
  margin-top: 8rpx;
  font-size: 24rpx;
  color: #6f6256;
}

.card {
  margin-top: 22rpx;
  padding: 26rpx 26rpx 30rpx;
  border-radius: 24rpx;
  background: #ffffff;
  box-shadow: 0 18rpx 40rpx rgba(96, 72, 30, 0.12);
}

.card.empty {
  text-align: center;
}

.card-title {
  font-size: 28rpx;
  font-weight: 600;
  margin-bottom: 16rpx;
}

.meta {
  display: flex;
  gap: 16rpx;
  flex-wrap: wrap;
  font-size: 22rpx;
  color: #6d6154;
}

.exercise-list {
  margin-top: 16rpx;
}

.exercise-row {
  padding: 12rpx 0;
  border-bottom: 1rpx solid rgba(88, 64, 30, 0.12);
}

.exercise-row:last-child {
  border-bottom: none;
}

.exercise-name {
  font-size: 24rpx;
}

.exercise-target {
  margin-top: 6rpx;
  font-size: 22rpx;
  color: #7a6d60;
}

.empty-text {
  font-size: 24rpx;
  color: #7a6d60;
  margin-bottom: 16rpx;
}

.field {
  margin-bottom: 14rpx;
}

.label {
  font-size: 22rpx;
  color: #6a5f54;
  margin-bottom: 8rpx;
}

.input,
.picker {
  padding: 16rpx 18rpx;
  border-radius: 14rpx;
  border: 1rpx solid rgba(88, 64, 30, 0.2);
  background: #faf8f4;
  font-size: 24rpx;
}

.textarea {
  width: 100%;
  min-height: 140rpx;
  padding: 16rpx 18rpx;
  border-radius: 14rpx;
  border: 1rpx solid rgba(88, 64, 30, 0.2);
  background: #faf8f4;
  font-size: 24rpx;
  box-sizing: border-box;
}

.primary-button {
  margin-top: 12rpx;
  background: #1f1b17;
  color: #f5eee6;
  border-radius: 18rpx;
  font-size: 28rpx;
}

.secondary-button {
  margin-top: 12rpx;
  background: rgba(180, 99, 44, 0.1);
  color: #5b4835;
  border-radius: 18rpx;
  font-size: 26rpx;
}

.ghost-button {
  width: 100%;
  border-radius: 18rpx;
  background: transparent;
  border: 1rpx dashed rgba(88, 64, 30, 0.4);
  color: #5b4835;
  font-size: 26rpx;
}

.ai-result {
  margin-top: 16rpx;
  padding: 16rpx;
  border-radius: 16rpx;
  background: rgba(31, 27, 23, 0.06);
  font-size: 22rpx;
  color: #6a5f54;
}

.ai-line {
  margin-bottom: 6rpx;
}

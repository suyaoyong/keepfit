.page {
  min-height: 100vh;
  padding: 72rpx 48rpx 80rpx;
  background: radial-gradient(circle at 20% 10%, #2c2722 0%, #181512 60%);
  color: #f4ede4;
  font-family: "KaiTi", "STKaiti", "Noto Serif SC", serif;
}

.header {
  margin-bottom: 36rpx;
}

.title {
  font-size: 60rpx;
  font-weight: 700;
  letter-spacing: 3rpx;
}

.subtitle {
  margin-top: 12rpx;
  font-size: 26rpx;
  color: rgba(244, 237, 228, 0.7);
  line-height: 1.6;
}

.card {
  padding: 36rpx;
  border-radius: 26rpx;
  background: linear-gradient(160deg, rgba(255, 255, 255, 0.08), rgba(255, 255, 255, 0.02));
  border: 1rpx solid rgba(255, 255, 255, 0.12);
  box-shadow: 0 20rpx 60rpx rgba(0, 0, 0, 0.35);
}

.card-top {
  position: relative;
  padding-bottom: 24rpx;
  border-bottom: 1rpx solid rgba(255, 255, 255, 0.1);
}

.avatar-ring {
  position: absolute;
  top: -16rpx;
  right: 0;
  width: 88rpx;
  height: 88rpx;
  border-radius: 50%;
  border: 2rpx dashed rgba(255, 255, 255, 0.4);
}

.card-title {
  font-size: 30rpx;
  font-weight: 600;
}

.card-desc {
  margin-top: 10rpx;
  font-size: 24rpx;
  color: rgba(244, 237, 228, 0.7);
}

.info {
  margin-top: 22rpx;
}

.info-row {
  font-size: 24rpx;
  color: rgba(244, 237, 228, 0.8);
  margin-bottom: 12rpx;
}

.primary-button {
  margin-top: 40rpx;
  width: 100%;
  border-radius: 18rpx;
  background: #d98b44;
  color: #1b140f;
  font-size: 30rpx;
  font-weight: 600;
  box-shadow: 0 16rpx 30rpx rgba(217, 139, 68, 0.35);
}

.hint {
  margin-top: 16rpx;
  text-align: center;
  font-size: 22rpx;
  color: rgba(244, 237, 228, 0.6);
}

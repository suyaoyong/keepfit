.page {
  padding: 32rpx;
}

.page-title {
  font-size: 40rpx;
  font-weight: 700;
  color: #1f1f1f;
}

.page-desc {
  margin-top: 8rpx;
  font-size: 26rpx;
  color: #666666;
}

.section {
  margin-top: 24rpx;
  background: #ffffff;
  border-radius: 16rpx;
  padding: 20rpx;
  box-shadow: 0 6rpx 16rpx rgba(0, 0, 0, 0.06);
}

.record {
  padding: 16rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.record:last-child {
  border-bottom: none;
}

.record-title {
  font-size: 26rpx;
  font-weight: 600;
  color: #1f1f1f;
}

.record-meta {
  margin-top: 6rpx;
  font-size: 24rpx;
  color: #666666;
}

.empty {
  margin-top: 40rpx;
  text-align: center;
  color: #999999;
}

.empty-text {
  font-size: 24rpx;
}

.secondary-button {
  margin-top: 16rpx;
  background: #ffffff;
  color: #1f1f1f;
  border: 1rpx solid #d9d9d9;
  border-radius: 12rpx;
}

.secondary-button::after {
  border: none;
}

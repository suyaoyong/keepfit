.page {
  min-height: 100vh;
  padding: 56rpx 34rpx 96rpx;
  background: radial-gradient(circle at top right, #2a1a12 0%, #141414 42%, #0d0d0d 100%);
  color: #f3efe8;
  font-family: "Noto Sans SC", "PingFang SC", sans-serif;
}

.header {
  margin-bottom: 24rpx;
}

.title {
  font-size: 50rpx;
  line-height: 1.1;
  font-weight: 700;
  color: #fff8f0;
}

.subtitle {
  margin-top: 8rpx;
  font-size: 24rpx;
  line-height: 1.4;
  color: #b8aea2;
}

.hero-card {
  margin-top: 22rpx;
  padding: 28rpx 28rpx 32rpx;
  border-radius: 24rpx;
  background: linear-gradient(160deg, rgba(27, 27, 27, 0.96), rgba(16, 16, 16, 0.96));
  border: 1rpx solid rgba(255, 106, 0, 0.36);
  box-shadow: 0 18rpx 38rpx rgba(0, 0, 0, 0.35);
}

.hero-top {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.hero-badge {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  height: 44rpx;
  padding: 0 18rpx;
  border-radius: 12rpx;
  background: rgba(255, 106, 0, 0.18);
  border: 1rpx solid rgba(255, 106, 0, 0.42);
  color: #ff8d3a;
  font-size: 22rpx;
  font-weight: 700;
}

.hero-stage {
  color: #e6ddd2;
  font-size: 24rpx;
  font-weight: 600;
}

.hero-title {
  margin-top: 16rpx;
  font-size: 40rpx;
  font-weight: 700;
  color: #fff8f0;
}

.hero-subtitle {
  margin-top: 8rpx;
  font-size: 24rpx;
  color: #cfc4b8;
}

.card {
  margin-top: 22rpx;
  padding: 28rpx 28rpx 32rpx;
  border-radius: 24rpx;
  background: rgba(22, 22, 22, 0.95);
  border: 1rpx solid rgba(255, 255, 255, 0.08);
  box-shadow: 0 14rpx 30rpx rgba(0, 0, 0, 0.28);
}

.card-title {
  font-size: 30rpx;
  line-height: 1.35;
  margin-bottom: 16rpx;
  color: #f2ede4;
}

.record {
  padding: 16rpx 0;
  border-bottom: 1rpx solid rgba(255, 255, 255, 0.08);
}

.record:last-child {
  border-bottom: none;
}

.record-title {
  font-size: 26rpx;
  font-weight: 600;
  color: #f2ede4;
}

.record-meta {
  margin-top: 6rpx;
  font-size: 22rpx;
  color: #bcae9d;
  line-height: 1.5;
}

.empty {
  text-align: center;
}

.empty-text {
  font-size: 24rpx;
  color: #bcae9d;
}

.secondary-button {
  margin-top: 14rpx;
  min-height: 84rpx;
  line-height: 84rpx;
  border-radius: 18rpx;
  background: rgba(255, 255, 255, 0.05);
  color: #ffe4cf;
  border: 1rpx solid rgba(255, 106, 0, 0.32);
  font-size: 26rpx;
}

.secondary-button::after {
  border: none;
}

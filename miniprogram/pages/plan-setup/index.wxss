.page {
  min-height: 100vh;
  padding: 64rpx 40rpx 90rpx;
  background: linear-gradient(180deg, #f0e7d9 0%, #f7f0e6 40%, #fdf8f2 100%);
  color: #201b14;
  font-family: "STSong", "Noto Serif SC", serif;
}

.header {
  margin-bottom: 30rpx;
}

.title {
  font-size: 52rpx;
  font-weight: 700;
}

.subtitle {
  margin-top: 10rpx;
  font-size: 24rpx;
  color: #6d6154;
}

.card {
  margin-top: 24rpx;
  padding: 28rpx 28rpx 30rpx;
  border-radius: 24rpx;
  background: rgba(255, 255, 255, 0.85);
  box-shadow: 0 18rpx 40rpx rgba(88, 64, 30, 0.12);
}

.section-title {
  font-size: 28rpx;
  font-weight: 600;
  margin-bottom: 18rpx;
}

.field {
  margin-bottom: 16rpx;
}

.label {
  font-size: 22rpx;
  color: #6a5f54;
  margin-bottom: 8rpx;
}

.input {
  padding: 16rpx 18rpx;
  border-radius: 16rpx;
  border: 1rpx solid rgba(88, 64, 30, 0.2);
  background: #fff;
  font-size: 24rpx;
}

.pills {
  display: flex;
  gap: 12rpx;
}

.pill {
  padding: 10rpx 20rpx;
  border-radius: 999rpx;
  border: 1rpx solid rgba(88, 64, 30, 0.2);
  font-size: 22rpx;
  color: #5c5247;
}

.pill-active {
  background: #1f1b17;
  color: #f5eee6;
}

.hint {
  font-size: 22rpx;
  color: #7a6f63;
  margin-top: 12rpx;
}

.exercise {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 10rpx 0;
  border-bottom: 1rpx dashed rgba(88, 64, 30, 0.15);
}

.exercise:last-child {
  border-bottom: none;
}

.exercise-name {
  font-size: 24rpx;
}

.picker {
  padding: 8rpx 16rpx;
  border-radius: 999rpx;
  background: rgba(31, 27, 23, 0.08);
  font-size: 22rpx;
}

.tabs {
  display: flex;
  gap: 12rpx;
  margin-bottom: 18rpx;
}

.tab {
  flex: 1;
  text-align: center;
  padding: 12rpx 0;
  border-radius: 999rpx;
  border: 1rpx solid rgba(31, 27, 23, 0.16);
  font-size: 22rpx;
  color: #5c5247;
}

.tab-active {
  background: #b4632c;
  color: #fff;
  border-color: transparent;
}

.schedule-panel {
  margin-top: 10rpx;
}

.schedule-title {
  font-size: 24rpx;
  color: #5c5247;
  margin-bottom: 12rpx;
}

.week-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 12rpx;
}

.week-day {
  padding: 14rpx;
  border-radius: 16rpx;
  border: 1rpx solid rgba(31, 27, 23, 0.16);
  background: rgba(255, 255, 255, 0.7);
}

.week-day.selected {
  background: #1f1b17;
  color: #f5eee6;
}

.week-label {
  font-size: 22rpx;
}

.week-date {
  margin-top: 6rpx;
  font-size: 20rpx;
  opacity: 0.8;
}

.calendar-grid {
  display: grid;
  grid-template-columns: repeat(7, 1fr);
  gap: 8rpx;
}

.calendar-cell {
  height: 64rpx;
  border-radius: 14rpx;
  border: 1rpx solid rgba(31, 27, 23, 0.14);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 20rpx;
  color: #3e342b;
  background: rgba(255, 255, 255, 0.6);
}

.calendar-cell.empty {
  border: none;
  background: transparent;
}

.calendar-cell.selected {
  background: #1f1b17;
  color: #f5eee6;
}

.calendar-text {
  line-height: 1;
}

.recommendation-row {
  font-size: 24rpx;
  color: #5d5348;
  margin-bottom: 8rpx;
}

.method-block {
  margin-top: 16rpx;
  padding: 16rpx;
  border-radius: 16rpx;
  background: rgba(31, 27, 23, 0.06);
  font-size: 22rpx;
  color: #4f443a;
}

.method-title {
  font-size: 24rpx;
  font-weight: 600;
  margin-bottom: 8rpx;
}

.method-text {
  font-size: 22rpx;
  line-height: 1.6;
}

.method-targets {
  margin-top: 10rpx;
  font-size: 22rpx;
  color: #6b5f54;
}

.method-empty {
  margin-top: 12rpx;
  font-size: 22rpx;
  color: #8a7c6e;
}

.actions {
  margin-top: 32rpx;
  display: grid;
  grid-template-columns: 1fr;
  gap: 16rpx;
}

.primary-button {
  width: 100%;
  border-radius: 18rpx;
  background: #1f1b17;
  color: #f5eee6;
  font-size: 28rpx;
}

.secondary-button {
  width: 100%;
  border-radius: 18rpx;
  background: rgba(180, 99, 44, 0.15);
  color: #5b4835;
  font-size: 26rpx;
}

  background: rgba(22, 22, 22, 0.95);
  border: 1rpx solid rgba(255, 255, 255, 0.08);
  box-shadow: 0 14rpx 30rpx rgba(0, 0, 0, 0.28);
}

.section-title {
  font-size: 30rpx;
  line-height: 1.35;
  margin-bottom: 16rpx;
  color: #f2ede4;
}

.label,
.hint,
.method-empty,
.level-name,
.schedule-title,
.week-chip,
.week-exercise-name,
.exercise-name,
.lock-tag,
.method-targets,
.method-text {

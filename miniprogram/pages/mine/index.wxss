.page {
  min-height: 100vh;
  padding: 56rpx 36rpx 90rpx;
  background: radial-gradient(circle at top right, #2a1a12 0%, #141414 42%, #0d0d0d 100%);
  color: #f3efe8;
  font-family: "Noto Sans SC", "PingFang SC", sans-serif;
}

.header {
  margin-bottom: 24rpx;
}

.title {
  font-size: 50rpx;
  font-weight: 700;
  color: #fff8f0;
}

.subtitle {
  margin-top: 8rpx;
  font-size: 24rpx;
  color: #b8aea2;
}

.hero-card {
  margin-top: 22rpx;
  padding: 30rpx 28rpx;
  border-radius: 24rpx;
  background: linear-gradient(160deg, rgba(27, 27, 27, 0.96), rgba(16, 16, 16, 0.96));
  border: 1rpx solid rgba(255, 106, 0, 0.36);
  box-shadow: 0 18rpx 38rpx rgba(0, 0, 0, 0.35);
}

.hero-top {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.hero-badge {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  height: 44rpx;
  padding: 0 18rpx;
  border-radius: 12rpx;
  background: rgba(255, 106, 0, 0.18);
  border: 1rpx solid rgba(255, 106, 0, 0.42);
  color: #ff8d3a;
  font-size: 22rpx;
  font-weight: 700;
}

.hero-stage {
  color: #e6ddd2;
  font-size: 24rpx;
  font-weight: 600;
}

.hero-user-row {
  margin-top: 14rpx;
  display: flex;
  align-items: center;
  gap: 18rpx;
}

.avatar {
  width: 96rpx;
  height: 96rpx;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.06);
  border: 1rpx solid rgba(255, 255, 255, 0.1);
}

.avatar.placeholder {
  display: flex;
  align-items: center;
  justify-content: center;
  color: #ffe4cf;
  font-size: 34rpx;
  font-weight: 700;
}

.user-meta {
  flex: 1;
}

.user-name {
  font-size: 30rpx;
  font-weight: 700;
  color: #fff8f0;
}

.user-status {
  margin-top: 6rpx;
  font-size: 22rpx;
  color: #bcae9d;
}

.hero-summary {
  margin-top: 12rpx;
  font-size: 22rpx;
  color: #d6cfc8;
}

.card {
  margin-top: 22rpx;
  padding: 26rpx 26rpx 30rpx;
  border-radius: 24rpx;
  background: rgba(22, 22, 22, 0.95);
  border: 1rpx solid rgba(255, 255, 255, 0.08);
  box-shadow: 0 14rpx 30rpx rgba(0, 0, 0, 0.28);
}

.card-title {
  font-size: 28rpx;
  font-weight: 600;
  margin-bottom: 16rpx;
  color: #f2ede4;
}

.entry-list {
  border-top: 1rpx solid rgba(255, 255, 255, 0.08);
}

.entry-row {
  padding: 18rpx 0;
  border-bottom: 1rpx solid rgba(255, 255, 255, 0.08);
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.entry-main {
  flex: 1;
}

.entry-title {
  font-size: 26rpx;
  color: #f2ede4;
}

.entry-desc {
  margin-top: 6rpx;
  font-size: 22rpx;
  color: #bcae9d;
}

.entry-arrow {
  color: #ff9a4a;
  font-size: 26rpx;
  margin-left: 12rpx;
}

.ethos-card {
  border-color: rgba(255, 106, 0, 0.26);
  background: linear-gradient(160deg, rgba(31, 24, 19, 0.9), rgba(18, 18, 18, 0.95));
}

.ethos-line,
.snapshot-line {
  margin-top: 8rpx;
  font-size: 23rpx;
  color: #c6bbb0;
  line-height: 1.55;
}

.secondary-button {
  margin-top: 14rpx;
  background: rgba(255, 255, 255, 0.05);
  color: #ffe4cf;
  border: 1rpx solid rgba(255, 106, 0, 0.32);
  border-radius: 18rpx;
  font-size: 26rpx;
}

.secondary-button::after {
  border: none;
}

.ai-modal-mask {
  position: fixed;
  inset: 0;
  z-index: 40;
  background: rgba(17, 12, 8, 0.46);
  display: flex;
  align-items: flex-end;
}

.ai-modal-card {
  width: 100%;
  max-height: 86vh;
  overflow-y: auto;
  background: #171717;
  border-top: 1rpx solid rgba(255, 106, 0, 0.35);
  border-radius: 26rpx 26rpx 0 0;
  padding: 30rpx 30rpx calc(30rpx + env(safe-area-inset-bottom));
  box-shadow: 0 -16rpx 40rpx rgba(0, 0, 0, 0.35);
}

.ai-field-row {
  margin-top: 10rpx;
}

.ai-field-label {
  font-size: 22rpx;
  color: #c8b9a8;
  margin-bottom: 6rpx;
}

.ai-field-input,
.ai-picker-value {
  min-height: 56rpx;
  padding: 12rpx 14rpx;
  border-radius: 12rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.12);
  background: rgba(255, 255, 255, 0.05);
  font-size: 24rpx;
  color: #f2ede4;
}

/* Rhythm sync v2 */
.page {
  padding: 56rpx 34rpx 96rpx;
}

.title {
  font-size: 50rpx;
  line-height: 1.1;
}

.subtitle {
  font-size: 24rpx;
  line-height: 1.4;
}

.card,
.hero-card {
  margin-top: 22rpx;
  padding: 28rpx 28rpx 32rpx;
  border-radius: 24rpx;
}

.card-title {
  font-size: 30rpx;
  line-height: 1.35;
  margin-bottom: 16rpx;
}

.secondary-button {
  min-height: 84rpx;
  line-height: 84rpx;
  border-radius: 18rpx;
  font-size: 26rpx;
}

.contact-modal-mask {
  position: fixed;
  inset: 0;
  z-index: 42;
  background: rgba(17, 12, 8, 0.52);
  display: flex;
  align-items: flex-end;
}

.contact-modal-card {
  width: 100%;
  background: #171717;
  border-top: 1rpx solid rgba(255, 106, 0, 0.35);
  border-radius: 26rpx 26rpx 0 0;
  padding: 30rpx 30rpx calc(30rpx + env(safe-area-inset-bottom));
  box-shadow: 0 -16rpx 40rpx rgba(0, 0, 0, 0.35);
}

.contact-line {
  margin-top: 12rpx;
  font-size: 24rpx;
  color: #f2ede4;
}

.contact-tip {
  margin-top: 12rpx;
  font-size: 22rpx;
  color: #bcae9d;
  line-height: 1.5;
}

.contact-qrcode {
  margin-top: 14rpx;
  width: 360rpx;
  max-width: 100%;
  border-radius: 12rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.12);
  background: #fff;
}


.feedback-textarea {
  margin-top: 10rpx;
  width: 100%;
  min-height: 180rpx;
  padding: 14rpx;
  border-radius: 12rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.12);
  background: rgba(255, 255, 255, 0.05);
  font-size: 24rpx;
  color: #f2ede4;
  box-sizing: border-box;
}
